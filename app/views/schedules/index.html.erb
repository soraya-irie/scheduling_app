<h3>予定一覧</h3>

<% if flash[:notice] %>
  <p class="notice"><%= flash[:notice] %></p>
<% end %>

<table>
  <thead>
    <tr>
      <th>ID</th>
      <th>タイトル</th>
      <th>開始日</th>
      <th>終了日</th>
      <th>更新日時</th>
      <th>詳細</th>
      <th>編集</th>
      <th>削除</th>
    </tr>
  </thead>

  <tbody>
    <% @schedules.each do |schedule| %>
      <tr>
        <td><%= schedule.id %></td>
        <td><%= schedule.title %></td>
        <td><%= schedule.startdate %></td>
        <td><%= schedule.enddate %></td>
        <td><%= schedule.allday %></td>
        <td><%= schedule.updated_at.to_s(:datetime_jp) %></td>
        <td>
          <%= link_to "詳細", schedule %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<p><%= link_to "新規追加", :new_schedule %></p>
